root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[{*.har, *.jsb2, *.jsb3, .babelrc, .eslintrc, .stylelintrc, bowerrc, jest.config}]
indent_size = 2

[*.{ts, tsx, js, json, css, scss, sql, ejs, yaml, yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
