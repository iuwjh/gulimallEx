    <select id="getBySpuId" resultType="com.atguigu.gulimall.product.vo.SkuItemSaleAttrTo">
        select distinct pssav.attr_id                       attrId,
                        pssav.attr_name                     attrName,
                        pssav.attr_value                    attrValue,
                        group_concat(distinct pssav.sku_id) skuIds
        from pms_sku_info
                 left join pms_sku_sale_attr_value pssav on pms_sku_info.sku_id = pssav.sku_id
        where spu_id = #{spuId}
        group by pssav.attr_id, pssav.attr_name, pssav.attr_value;
    </select>


</mapper>
